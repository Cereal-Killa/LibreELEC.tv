<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.scottelecwizard" name="ScottELEC IARL Wizard" version="1.0.0" provider-name="The MXQ Project">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">ScottELEC IARL Wizard</summary>
    <description lang="en">This simple wizard will install and configure everything you need to easily use Zach Morris' IARL (Internet Archive ROM Launcher) for devices running ScottELEC and Sx05RE with minimal setup.</description>
    <platform>all</platform>
  </extension>
</addon>